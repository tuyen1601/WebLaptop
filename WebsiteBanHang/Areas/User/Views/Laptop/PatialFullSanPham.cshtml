@using WebsiteBanHang.Areas.User.Models;
@model List<SanPham>


<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper">
                                <img src="~/Areas/Admin/Content/Photo/@item.AnhBia" alt="" style="height:300px; width: 300px;">
                            </div>
                            <h2><a href="@Url.Action("XemChiTiet",new {@malap = item.MaLap })">@item.TenLap</a></h2>
                            <div class="product-carousel-price">
                                <ins>@string.Format("{0:0,0}", item.GiaBan) VND</ins>
                            </div>

                            <div class="product-option-shop">
                                <a class="add_to_cart_button"  href="@Url.Action("ThemSanPham", "GioHang", new { @masp = item.MaLap ,@strUrl = Request.Url.ToString()})">Add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    </div>

   